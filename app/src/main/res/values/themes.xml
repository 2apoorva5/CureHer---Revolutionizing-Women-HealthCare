<resources>
    <!-- Base application theme. -->
    <style name="Theme.CureHerApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

        <!-- Material Dialog -->
        <item name="material_dialog_background">@color/colorBackground</item>
        <item name="material_dialog_title_text_color">@color/colorTextDark</item>
        <item name="material_dialog_message_text_color">@color/colorTextDark</item>
        <item name="material_dialog_positive_button_color">@color/colorPrimary</item>
        <item name="material_dialog_positive_button_text_color">@android:color/white</item>
        <item name="material_dialog_negative_button_text_color">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrefixTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorInactive</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextAppearance" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
    </style>

    <style name="AlertText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="NavigationTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlHighlight">#DBCEF1</item>
    </style>

    <style name="NavigationMenuTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>